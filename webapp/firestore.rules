rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /devices/{deviceId}/events/{document=*} {
      allow create,read: if request.auth != null && deviceId == request.auth.uid
    }

    match /devices/{deviceId}/{document=*} {
      allow read, write: if request.auth != null && (request.auth.uid == request.resource.data.userId || request.auth.uid == deviceId);
    }
	}
}